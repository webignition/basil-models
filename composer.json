{
    "name": "webignition/basil-models",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-models",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilModels\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilModels\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "webignition/basil-dom-identifier-factory": "^1.1",
        "webignition/basil-value-extractor": "^1.0",
        "webignition/php-path-resolver": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^1.7",
        "webignition/object-reflector": "^0.1.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-phpunit": "^1.1",
        "friendsofphp/php-cs-fixer": "^3.91"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
