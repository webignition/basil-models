{
    "name": "webignition/basil-models",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-models",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilModels\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilModels\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.yaml",
            "./vendor/bin/phpcs"
        ],
        "cs-fix": "./vendor/bin/ecs check src tests --ansi --config ecs.yaml --fix",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.12",
        "webignition/object-reflector": "^0.1.0",
        "symplify/easy-coding-standard": "^8.1"
    }
}
